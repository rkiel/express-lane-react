extends ../layouts/private

block content
  if success
    p(class="alert alert-success" role="alert")
      strong SUCCESS:
      span #{success}
  if error
    p(class="alert alert-danger" role="alert")
      strong ERROR:
      span #{error}

  form(method="post", class="form-horizontal")
    input(type="hidden", name="_csrf", value=csrfToken)
    div(class="form-group")
      div(class="col-sm-offset-4 col-sm-6")
        h1 Change Password
    div(class="form-group")
      label(class="col-sm-4 control-label") Current Password:
      div(class="col-sm-6")
        input(class="form-control", type="password", name="currentPassword", required=true)
    div(class="form-group")
      label(class="col-sm-4 control-label") New Password:
      div(class="col-sm-6")
        input(class="form-control", type="password", name="newPassword", required=true)
    div(class="form-group")
      label(class="col-sm-4 control-label") Confirm Password:
      div(class="col-sm-6")
        input(class="form-control", type="password", name="confirmPassword", required=true)
    div(class="form-group")
      div(class="col-sm-offset-4 col-sm-6")
        button(type="submit" class="btn btn-primary") Submit
        a(href="/" class="btn btn-default") Cancel
